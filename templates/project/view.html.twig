{# project_view.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Project View - {{ project.title }}{% endblock %}
{% block body %}
    {% include 'project/_project_header.html.twig' %}

    <div class="row mt-4">
        {% for status, status_label in {'to-do': 'To Do', 'in-progress': 'In Progress', 'done': 'Done'} %}
            <div class="col-md-4 ">
                <div class="card mb-4 border-left-{{ status }} card-column" data-status="{{status}}">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="card-title">{{ status_label }}</h4>
                        <a href="#" class="modalbox btn btn-primary btn-sm"
                            data-toggle="modal"
                            data-target="#ideaModal"
                            data-content-url="{{ path('project_add_idea', {'status': status, 'id': project.id}) }}">
                            <i class="bi bi-plus"></i> 
                        </a>
                    </div>
                    <div class="card-body">
                        {% for idea in project.ideas %}
                            {% if idea.status.name == status %}
                                {% include 'project/_idea_card.html.twig' with { 'idea': idea } %}
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="modal fade" id="ideaModal" tabindex="-1" role="dialog" aria-labelledby="ideaModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div id="modalContent"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="commentsModal" tabindex="-1" role="dialog" aria-labelledby="commentsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-body">
                <div id="commentsModalContent"></div>
            </div>
        </div>
    </div>


<script>
$(function() {
    $('.idea-card').draggable({
        revert: 'invalid',
        helper: 'clone',
        zIndex: 100
    });

    $('.card-column').droppable({
        accept: '.idea-card',
        drop: function(event, ui) {
            var card = ui.draggable;
            var ideaId = card.attr('id').replace('idea-', '');
            var newStatus = $(this).data('status');

            // Update status via AJAX
            $.ajax({
                url: "{{ path('update_idea_status') }}", // Adjust as per your route
                method: 'PATCH',
                data: {
                    ideaId: ideaId,
                    newStatus: newStatus
                },
                success: function(response) {
                    // Optionally handle success response
                },
                error: function(xhr, status, error) {
                    // Optionally handle error
                    console.error('Error:', error);
                }
            });

            // Change card's status visually
            card.appendTo($(this).find('.card-body'));

        }
    });
});


</script>

{% endblock %}

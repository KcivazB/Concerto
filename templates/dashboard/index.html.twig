{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    {% if not app.user %}
        <div class="container">
            <h1>Welcome to Concerto, your ultimate idea conductor!</h1>
            <h2 class="mt-4">Please use connect using OAuth</h2>
            <div class="row mt-4 ml-4">
                <p>
                    <a href="{{ path('connect_google') }}" class="btn btn-primary">Connect with Google</a>
                    <a href="{{ path('connect_github') }}" class="btn btn-secondary">Connect with GitHub</a>
                </p>
            </div>
        </div>
    {% else %}
        <div class="container">
            <h1>Welcome, {{ app.user.username }}</h1>
            <h2 class="mt-4">Dashboard</h2>
            <div class="row mt-4">
                {% for project in projects %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ project.title }}</h5>
                                <p class="card-text">{{ project.description }}</p>
                                <a href="{{ path('project_view', {'id': project.id}) }}" class="btn btn-primary">View Project</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

{% endblock %}

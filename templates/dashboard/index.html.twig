{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    {% if not app.user %}
        <div class="container mt-5">
            <!-- Welcome Section -->
            <div class="text-center">
                <h1>Welcome to Concerto, your ultimate idea conductor!</h1>
                <p class="lead mt-3">Concerto helps you manage and develop your ideas efficiently. Connect to get started!</p>
            </div>
            
            <!-- Connection Section -->
            <div class="row justify-content-center mt-5">
                <div class="col-md-6 text-center">
                    <p>
                        <a href="{{ path('connect_google') }}" class="btn btn-primary btn-lg mb-3">
                            <i class="bi bi-google"></i> Connect with Google
                        </a>
                    </p>
                    <p>
                        <a href="{{ path('connect_github') }}" class="btn btn-secondary btn-lg">
                            <i class="bi bi-github"></i> Connect with GitHub
                        </a>
                    </p>
                </div>
            </div>

            <!-- About Section -->
            <div class="row mt-5">
                <div class="col-md-10 offset-md-1">
                    <div class="card">
                        <div class="card-body">
                            <h2>About Concerto</h2>
                            <p class="mt-3">
                                Concerto is designed to streamline the process of idea management and development. Whether you're an individual brainstorming your next big project or a team collaborating on innovative solutions, Concerto provides the tools you need to track, develop, and bring your ideas to life.
                            </p>
                            <p>
                                With features like project tracking, idea submissions, and status updates, Concerto ensures that no idea is left behind. Connect with your preferred OAuth provider to start managing your ideas today!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container">
            <h1>Welcome, {{ app.user.username|title }}</h1>
            <div class="row mt-4">
                <div class="col">
                    <h2>Dashboard</h2>
                </div>
                <div class="col text-right">
                    <button class="btn btn-secondary modalbox-project" data-toggle="modal" data-target="#projectModal" data-content-url="{{ path('project_new') }}">
                        <i class="bi bi-plus"></i> New Project
                    </button>
                </div>
            </div>
            <div class="row mt-4">
                {% for project in projects %}
                    <div class="col-md-4 mb-4">
                        <div class="card project-card clickable-card">
                            <a href="{{ path('project_view', {'id': project.id}) }}" class="card-link">
                                <div class="card-body">
                                    <h5 class="card-title">{{ project.title|capitalize }}</h5>
                                    <p class="card-text">{{ project.description|capitalize }}</p>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <!-- Project Modal -->
    <div class="modal fade" id="projectModal" tabindex="-1" role="dialog" aria-labelledby="projectModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div id="projectModalContent"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
